{
    "name": "openticket",
    "version": "1.0.0",
    "description": "Meta package for Openticket",
    "repository": "https://github.com/open-ticket/openticket",
    "author": "Openticket Project",
    "license": "MIT",
    "private": false,
    "devDependencies": {
        "babel-eslint": "^8.2.1",
        "eslint": "^4.17.0",
        "eslint-config-airbnb": "^16.1.0",
        "eslint-config-prettier": "^2.9.0",
        "eslint-plugin-import": "^2.8.0",
        "eslint-plugin-jsx-a11y": "^6.0.3",
        "eslint-plugin-react": "^7.6.1",
        "husky": "^0.14.3",
        "lint-staged": "^6.1.0",
        "prettier": "^1.10.2"
    },
    "scripts": {
        "lint": "eslint . --ext .js --ext .jsx --cache --ignore-path .eslintignore",
        "lint:force": "eslint . --ext .js --ext .jsx --ignore-path .eslintignore",
        "lint:staged": "lint-staged",
        "format": "prettier --write --trailing-comma all **/*.{js,jsx}",
        "precommit": "yarn run lint:staged"
    },
    "lint-staged": {
        "*.{js,jsx}": [
            "prettier --write --trailing-comma all",
            "git add"
        ]
    }
}
